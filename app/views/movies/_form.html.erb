<%= render "layouts/errors", object: @movie %>

<%= bootstrap_form_for(@movie) do |f| %>
  <%= f.text_field :title, placeholder: "Movie Title" %>
  <%= f.text_area :description, placeholder: "Description" %>
  <%= f.date_field :release_date %>
  <%= f.text_field :video_url, placeholder: "Must be an embed URL" %>
  <%= f.submit class: "btn btn-success btn-block" %>
<% end %>
